<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/widget32"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="20dp">
    <TextView
        android:id="@+id/widget33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:" />
    <EditText
        android:id="@+id/nameStudent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alex"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/widget35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Surname:" />
    <EditText
        android:id="@+id/surnameStudent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dominguez"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/widget38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address:" />
    <EditText
        android:id="@+id/addressStudent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="C/ Falsa 123"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/widget40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City:" />
    <EditText
        android:id="@+id/cityStudent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Malaga"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/widget41"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Postal Code:" />
    <EditText
        android:id="@+id/postalCodeStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="29640"
        android:inputType="number"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/widget41"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone:" />
    <EditText
        android:id="@+id/phoneStudent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="669665544"
        android:inputType="phone"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/widget37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:" />
    <EditText
        android:id="@+id/emailStudent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="webmaster@alejandrosuarez.es"
        android:textSize="16sp" />
    <LinearLayout
        android:id="@+id/widget39"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center_horizontal">
        <Button
            android:id="@+id/accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accept" />
        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel" />
    </LinearLayout>
</LinearLayout>